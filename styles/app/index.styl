// Variables
asihtosblue = #008AB9

html, body
  height 100%
  width 100%
  padding 0
  font-family 'Open Sans', Tahoma, sans-serif
  -webkit-font-smoothing antialiased
  background #FFF//url('http://subtlepatterns.com/patterns/norwegian_rose.png')

ul, ol
  margin 0

a
  color #333

  &:hover
    color #97310e
    text-decoration underline

#main
  min-width 940px
  height 100%
  padding 0
  overflow hidden

  a
    text-decoration none

    &:hover
      text-decoration asihtosblue

    h1
      //color darken(asihtosblue, 10%)
      text-decoration none

  header
    height 50px
    width 100%
    background #F6F6F6
    border-bottom 1px solid #AAA
    position relative
    z-index 99
    -webkit-box-shadow 0px 3px 2px -2px rgba(61, 61, 61, 0.4)
    box-shadow 0px 3px 2px -2px rgba(61, 61, 61, 0.4)

    ul
      height 50px
      width 50%

      &.left
        position absolute
        left 0
        max-width 50%

        li
          float left

          &.home-container
            font-family 'Lato'
            font-style italic
            font-weight 700
            font-size 1.2em

            a.home
              font-size 2em
              line-height 1.4em
              color asihtosblue
              padding-left 10px
              padding 3px 10px 4px 10px

              &:hover
                color #F6F6F6
                background asihtosblue

      &.right
        position absolute
        right 0

        li
          float right
          width 100px
          height 100%
          text-align center
          border-left 1px solid #DDD

          &:hover, &.active
            border-left 1px solid asihtosblue

          &.add-container

            .add-form-container
              display none
              position relative
              z-index 99
              background #F6F6F6
              width 250px
              padding 5px
              border 1px solid #DDD
              border-top 0
              -webkit-box-shadow 0px 3px 2px 1px rgba(61, 61, 61, 0.6)
              box-shadow 0px 3px 2px 1px rgba(61, 61, 61, 0.6)

              form
                text-align center

                textarea
                  background #F6F6F6

                  &:focus
                    outline-width 0
                    outline none
          a
            color asihtosblue
            font-size 2.1em
            line-height 1.8em
            height 100%
            font-family "HelveticaNeue-CondensedBold", "Helvetica Neue", 'Arial Narrow', Arial, sans-serif

            &:hover, &.active
              color #F6F6F6
              background asihtosblue

      li
        height 44px
        list-style none
        font-family 'Lato'
        font-weight 400
        font-size 1em

        a
          font-size 1.8em
          line-height 1.8em
          display block
          margin 0
          color #000

          &:hover
            background #000
            color #F6F6F6

        &.search-container
          width 50%
          margin 0 0 0 50px
          line-height 55px

          input
           border-radius(0)

  .main-container
    height 100%
    overflow-y auto

    .row-fluid
      height 100%
      width 98%
      margin auto

      .span3
        height 100%
        max-width 23%
        position relative
        overflow-y auto
        overflow-x hidden

        &.span-show
          border-bottom 1px solid #AAA

        div.ul-header
          position absolute
          color #333
          z-index 98
          font-size 1.33em
          //text-transform: uppercase
          text-shadow 0 1px 0 #fff
          font-weight 600
          text-align center
          line-height 1em
          padding 1em 0 1em 0
          width 99%
          border 1px solid #AAA
          border-top 0
          background-color #F6F6F6
          text-overflow ellipsis
          white-space nowrap
          overflow hidden
          -webkit-box-shadow 0px 4px 3px -2px rgba(61, 61, 61, 0.4)
          box-shadow 0px 4px 3px -2px rgba(61, 61, 61, 0.4)

        ul
          overflow-x hidden
          background-color #F6F6F6
          margin 0 2% 0 2%
          top 53px
          bottom 0
          width 95%
          position absolute
          border-left 1px solid #AAA
          border-right 1px solid #AAA

          li
            list-style none
            border-bottom 1px solid #AAA
            cursor pointer
            font-size 1.1em
            position relative
            //-webkit-box-shadow 0px 0px 2px 2px rgba(61, 61, 61, 0.1)
            //box-shadow 0px 0px 2px 2px rgba(61, 61, 61, 0.1)

            &.footnotes p
              padding 10px 0 0 5px

            > a
              color #555
              height 100%
              width auto
              padding 10px 0px 10px 5px
              //line-height 38px
              text-decoration none
              display block
              text-overflow ellipsis
              white-space nowrap
              overflow hidden

              &:hover
                background #E6E6E6


              &.blue
                color asihtosblue

              &.selected, &.true, &.truetrue
                background asihtosblue
                color #fff
                //position relative
                //z-index 3
                //-webkit-box-shadow 0px 4px 3px -2px rgba(0, 0, 0, 0.3), 0px -4px 3px -2px rgba(0, 0, 0, 0.3)
                //box-shadow 0px 4px 3px -2px rgba(0, 0, 0, 0.3), 0px -4px 3px -2px rgba(0, 0, 0, 0.3)

              &.clear
                padding 0
                width auto
                height auto
                display inline-block

              span.segue, span.info
                color #555
                font-size 0.75em

              span.date
                font-size 1.3em

            form
              margin 0

              input
                margin 5px
                width 93%
                background transparent
                border 1px solid rgba(0, 0, 0, .3)

            .error
              font-size 3em
              ne-height 1em
              padding 10px
              color #D90F0F

        &.span-show
          height 40%

      .span6
        height 60%
        overflow auto

        #song-container

          iframe
            min-width 420px
            min-height 256px
            width 80%
            height 40%

          ul

            li
              list-style none

              .report
                color #555
                font-size 0.91em
                position absolute
                z-index 2
                right 4px
                bottom 10px
                opacity .7

                &:hover
                  opacity 1

              .report-actions
                padding 5px
                text-align center
                display none

                > a
                  margin 5px

              > a

                &.video-link
                  font-size 1.14em
                  float left

                  img
                   height 110px
                   width 146px

    .page
      padding 10px 10px 50px 10px
      margin 10px auto
      width 750px

      h2
        text-align center
        font-family "HelveticaNeue-CondensedBold", "Helvetica Neue", 'Arial Narrow', Arial, sans-serif
        color #333

      p
        color #333

      #about-container

        a
          border-bottom 1px solid #CCC

          &:hover
            border-bottom 1px solid #AAA

      #tiph-container
        height 100%
        overflow-y auto

        h3.err
          text-align center

        .tiph
          border-bottom 1px solid #CCC
          padding 20px

          > a
            font-size 1.5em

          i
            opacity .8

          a, h3, .info
            text-align left

          h3
            font-weight 600

          .info, .info > a
            color #444
            opacity .8

          iframe
            margin auto
            padding-bottom 30px
            display none

          .report
            color #555
            font-size 0.91em
            position absolute
            z-index 2
            right 4px
            bottom 10px
            opacity .7

          .report-actions
            padding 5px
            text-align center
            display none

            > a
              margin 5px

    .validate
      height 100%
      //overflow-x auto


      .validate-video
        border-bottom 1px solid #CCC
        padding 10px
        margin 10px auto
        width 750px

        h3
          margin-bottom 3px

        select
          width: 60px

          &.year
            width: 70px

        .setlist-approval-container
          width 640px

          select
            width 200px
            margin 0 10px
            padding 0
            height 100%
            float left

            &:focus
              outline 1px solid asihtosblue
              border 1px solid #EEE

          iframe
            float left

          p
            right: 0
            margin-left 438px
            margin-top -33px

        .validate-confirm
          text-align center

          p
            margin 0 0 4px

          button
            height 80px
            width 100%
            margin 4px
            font-size 1.83em
            padding: 0 20px

.small
  font-size 0.83em

.left
  float left

.clear-float
  clear both

noscript
  position absolute
  top 140px
  left 20px
  width 150px
  background #FFF
